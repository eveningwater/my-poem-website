{
  "name": "my-poem",
  "version": "0.0.1",
  "description": "A static site based on dumi",
  "scripts": {
    "start": "npm run dev",
    "stats": "npm run generate:stats",
    "dev": "npm run generate:stats && dumi dev",
    "build": "npm run generate:stats && dumi build && npm run package",
    "build:only": "npm run generate:stats && dumi build",
    "package": "node scripts/package-build.js",
    "generate:stats": "node scripts/generate-statistics.js",
    "prepare": "husky install && dumi setup",
    "deploy": "npm run build:only && gh-pages -d my-poem-website",
    "release": "gh-pages -d my-poem-website"
  },
  "authors": [
    "eveningwater"
  ],
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "dumi": "^2.2.9",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  },
  "dependencies": {
    "gh-pages": "^6.0.0"
  }
}
